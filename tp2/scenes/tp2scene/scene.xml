<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<yaf>
    <globals background="0 0 0 1" ambient="0 0 0 1" />

    <fog color="1.0 1.0 1.0 1.0" near="0.0" far="100.0" />

    <cameras initial="cam1" >
        <perspective id="cam1"
            angle="60"
            near="0.1"
            far="1000"
            location="15 15 15"
            target="0 0.0 0" />

        <orthogonal id="cam2"
            near="0.1"
            far="1000"
            location="0 15 15"
            target="0.0 15 0.0"
            left="-5"
            right="5"
            bottom="-5"
            top="-5" />
    </cameras>

    <textures>
        <texture id="friskTex" filepath="./textures/frisk.png"/>
        <texture id="torielTex" filepath="./textures/toriel.png"/>
        <texture id="columnsTex" filepath="./textures/columns.png"/>
        <texture id="flowerBedTex" filepath="./textures/golden_flowers.png"/>
        <texture id="wallsTex" filepath="./textures/walls.png"/>
        <texture id="floorTex" filepath="./textures/floor.png"/>

    </textures>

    <materials>
        <material id="floorApp"
            emissive="0.0 0.0 0.0 1"
            color="0.8 0.8 0.8 1.0"
            specular="0 0 0 0"
            shininess="0"
            textureref="floorTex"
            texlength_s="1"
            texlength_t="1"
            twosided = "true"
        />

        <material id="wallsApp"
            emissive="0.0 0.0 0.0 1"
            color="0.8 0.8 0.8 1.0"
            specular="0 0 0 0"
            shininess="0"
            textureref="wallsTex"
            texlength_s="1"
            texlength_t="1"
            twosided = "true"
        />

        <material id="flowerBedApp"
            emissive="0.0 0.0 0.0 1"
            color="0.8 0.8 0.8 1.0"
            specular="0 0 0 0"
            shininess="0"
            textureref="flowerBedTex"
            texlength_s="1"
            texlength_t="1"
            twosided = "true"
        />

        <material id="friskApp"
            emissive="0.0 0.0 0.0 1"
            color="#00000000"
            specular="0 0 0 0"
            shininess="0"
            textureref="friskTex"
            texlength_s="1"
            texlength_t="1"
            twosided = "true"
            transparent = "true"
        />

        <material id="torielApp"
            emissive="0.0 0.0 0.0 1"
            color="0.8 0.8 0.8 1.0"
            specular="0 0 0 0"
            shininess="0"
            textureref="torielTex"
            texlength_s="1"
            texlength_t="1"
            twosided = "true"
        />

        <material id="columnsApp"
            emissive="0.0 0.0 0.0 1"
            color="0.8 0.8 0.8 1.0"
            specular="0 0 0 0"
            shininess="0"
            textureref="columnsTex"
            texlength_s="1"
            texlength_t="1"
            twosided = "true"
        />

    </materials>

    <graph rootid="scene">
        <node id="scene">
            <children>
                <noderef id="room"/>
                <noderef id="frisk"/>
                <directionallight id="light1" enabled="true"
                    color="1.0 1.0 1.0 1"
                    intensity="1.0"
                    castshadow="true"
                    position="2 2 4"
                />

            </children>
        </node>

        <node id="room">
            <children>
                <noderef id="floor"/>
                <noderef id="wall1"/>
                <noderef id="wall2"/>
                <noderef id="column"/>
            </children>
        </node>

        <node id="floor">
            <transforms>
				<rotate value3="-90 0.0 0.0" />
            </transforms>

			<materialref id="floorApp" />

            <children>
                <noderef id="flowerBed"/>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="wall1">
			<transforms>
				<rotate value3="-90 0.0 0.0" />
            </transforms>

            <materialref id="wallsApp" />

            <children>
                <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
            </children>
        </node>

        <node id="wall2">
			<transforms>
				<translate value3="0 0 15" />
				<rotate value3="0.0 90 0.0" />
            </transforms>

			<materialref id="wallsApp" />

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="frisk">
            <transforms>
                <translate value3="0 0.5 0" />
            </transforms>

            <children>
                <!-- Create a rectangle for frisk texture-->
            </children>
        </node>

        <node id="toriel">
            <transforms>
                <translate value3="0 0.5 0" />
            </transforms>

            <children>
                <!-- Create a rectangle for toriel texture-->
            </children>
        </node>

        <node id="flowerBed">
            <transforms>
                <translate value3="0 0.01 0" />
            </transforms>

            <materialref id="flowerBedApp" />

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="column">
            <transforms>
                <translate value3="0 0.01 0" />
            </transforms>

            <materialref id="columnsApp" />

            <children>
                <primitive>
                    <!-- Create a rectangular box for column-->
                </primitive>
            </children>
        </node>

    </graph>
</yaf>